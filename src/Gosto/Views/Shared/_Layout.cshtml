<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name=”description” content="Visit us when you are in Kandy for delicious coffee, delectable food and an unrivalled atmosphere. See you at Ceilao Gosto Coffee Shop and Restaurant.">
    <title>@ViewData["Title"] - Ceilao Gosto Restaurant and Coffee Shop</title>
    <script src="https://use.fontawesome.com/d9beb3ddd6.js"></script>
    <link rel="stylesheet" href="~/fonts/other/style.css" />
    <link rel="stylesheet" href="~/css/bootstrap-datetimepicker.min.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Andika|Montserrat:700" rel="stylesheet">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Andika|Montserrat:700" rel="stylesheet">
    </environment>
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-80427548-1', 'auto');
        ga('send', 'pageview');
    </script>
</head>
<body>
    @using Microsoft.AspNetCore.Authorization
    @inject IAuthorizationService AuthorizationService
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container navbar-font">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Ceila&#771;o Gosto</a>
            </div>
            <div class="navbar-collapse collapse fix-height">
                <ul class="nav navbar-nav">
                    <li><a id="menu-btn" asp-controller="Home" asp-action="Menu"><i class="fa fa-cutlery fa-fw" aria-hidden="true"></i><span id="menu-txt" class="hide-text">&nbsp; Menu</span></a></li>
                    <li><a id="promotions-btn" asp-controller="Home" asp-action="Promotions"><i class="fa fa-usd fa-fw" aria-hidden="true"></i><span id="promotions-txt" class="hide-text">&nbsp; Promotions</span></a></li>
                    <li><a id="reservation-btn" asp-controller="Home" asp-action="Reservations"><i class="fa fa-book fa-fw" aria-hidden="true"></i><span id="reservation-txt" class="hide-text">&nbsp; Reservation</span></a></li>
                    <li><a id="contact-btn" asp-controller="Home" asp-action="Contact"><i class="fa fa-phone fa-fw" aria-hidden="true"></i><span id="contact-txt" class="hide-text">&nbsp; Contact Us</span></a></li>
                    <li><a id="social-btn" asp-controller="Home" asp-action="SocialMedia"><i class="fa fa-rss fa-fw" aria-hidden="true"></i><span id="social-txt" class="hide-text">&nbsp; Social Media</span></a></li>
                    <li><a id="fair-btn" asp-controller="Home" asp-action="FairTrade"><i class="fa fa-handshake-o fa-fw" aria-hidden="true"></i><span id="social-txt" class="hide-text">&nbsp; Fair Share Group</span></a></li>
                    <li><a id="about-btn" asp-controller="Home" asp-action="AboutUs"><i class="fa fa-users fa-fw" aria-hidden="true"></i><span id="about-txt" class="hide-text">&nbsp; About Us</span></a></li>
                    <li><a id="careers-btn" asp-controller="Home" asp-action="Careers"><i class="fa fa-suitcase fa-fw" aria-hidden="true"></i><span id="careers-txt" class="hide-text">&nbsp; Careers</span></a></li>
                    @if (await AuthorizationService.AuthorizeAsync(User, "CanViewAdminPage"))
                    {
                        <li>
                            <a class="text-danger" asp-area=""
                               asp-controller="Admin" asp-action="Index">Admin Panel</a>
                        </li>
                    }
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="min-height">@RenderBody()</div>
        <hr />
        <footer>
            <div class="row footer-height">
                <div class="col-sm-2 col-sm-offset-5">
                    <ul class="list-inline text-center footer-text">
                        <li><a target="_blank" href="https://www.facebook.com/ceilaogosto/"><i class="fa fa-facebook"></i></a></li>
                        <li><a target="_blank" href="https://www.tripadvisor.com/Restaurant_Review-g304138-d8119165-Reviews-Ceilao_Gosto-Kandy_Central_Province.html"><i class="fa fa-tripadvisor"></i></a></li>
                        <li><a target="_blank" href="https://plus.google.com/111374237842267925918/about"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <ul class="list-inline text-right footer-links">
                        <li><a asp-controller="Home" asp-action="Contact">Contact Us +94 81 2 203995</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">About us</a></li>
                    </ul>
                </div>
            </div>

            <p>&copy; 2016 - Ceilao Gosto</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
    @RenderSection("Styles", false)

</body>
</html>

<script>
    $(document).ready(function() {
        $('a[href="' + this.location.pathname + '"]').parent().addClass('active');
    });
</script>

