@model Gosto.Models.Order

@{
    ViewData["Title"] = "Edit";
}
@Html.Partial("AdminMenuPartial");


<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="OrderDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShoppingCartID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ShoppingCartID" class="form-control" />
                <span asp-validation-for="ShoppingCartID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TakeAway" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TakeAway" class="form-control"></select>
                <span asp-validation-for="TakeAway" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TotalPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
