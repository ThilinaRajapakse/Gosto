@using Gosto.Models
@model Reservation

@{
    ViewBag.Title = "Reservations";
}

<div class="container margin-top">
    <div class="row">
        @using (Html.BeginForm(FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Comments, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Comments, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Comments)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Time, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Time, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Time)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-default" value="Make Reservation" />
                </div>
            </div>
        }
    </div>
</div>
